(Debug.sanitize-addresses)

(load "Test.carp")

(load "../sheriff.carp")

(use Test)

(deftype StringsStruct [key-one String keytwo String])

(deftest test
  (assert-equal test
    &(Result.Success @"{\"key-one\": \"val one\", \"keytwo\": \"Changed\"}")
    (=> (Sheriff.JSON.unmarshall StringsStruct "{\"key-one\": \"val one\", \"keytwo\": \"val two\"}")
        (Result.map &(fn [struct] (StringsStruct.set-keytwo struct @"Changed")))
        (Result.map &(fn [struct] (Sheriff.JSON.marshall StringsStruct &struct)))
        (ref))
    "Unmarshall and marshall together"))
